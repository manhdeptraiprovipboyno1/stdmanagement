{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}
{% block header %}{% endblock %}
{% block body %}
<section class="vh-100 gradient-custom">
<div class="container card bg-dark text-white col-3 mt-5 text-center" style="background-color: #508bfc;border-radius: 1rem;">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    
    <h1 class="fw-bold mb-2 text-uppercase">LOGIN</h1>
    <label for="inputUsername">Username</label>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control form-control-lg" autocomplete="username" required autofocus>
    <label class="form-label" for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    

        <div class="checkbox mb-3">
            <label class="form-check-label" for="form1Example3">
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    

    <button class="btn btn-lg btn-primary" type="submit">
        Sign in
    </button>
</form>
    <div class="jubotron mt-5">
    <h5 class="btn btn-lg btn-block btn-primary" style="background-color: #3b5998">
        <a href="{{ path("app_register")}}">Register Account</a>
    </h5>
    </div>
</div>
</section>
{% endblock %}
{% block footer %}{% endblock %}
