{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid mt-3" style="font-family:Comic Sans MS">
    <h2 class="text-success text-center text-capitalize">ADD STUDENT</h2>
    <div class="col-md-5"></div>
        {{form_start(form)}}
        <div class="form-group">
            {{ form_label(form.name) }}
            {{ form_widget(form.name,
                {
                    'attr': {'class': 'form-control'}
                })
            }}  
        </div>
        <div class="form-group">
            {{ form_label(form.birthday) }}
            {{ form_widget(form.birthday,
                {
                    'attr': {'class': 'form-control'}
                })
            }}
        </div>
        <div class="form-group">
            {{ form_label(form.nationality) }}
            {{ form_widget(form.nationality,
                {
                    'attr': {'class': 'form-control'}
                })
            }}
        </div>
        <div class="form-group">
            {{ form_label(form.avatar) }}
            {{ form_widget(form.avatar,
                {
                    'attr': {'class': 'form-control'}
                })
            }}
        </div>
        <div class="form-group">
            {{ form_label(form.classList) }}
            {{ form_widget(form.classList,
                {
                    'attr': {'class': 'form-control'}
                })
            }}
        </div>
        <div class="form-group text-center mt-3">
            <button class="btn btn-primary" type="submit">ADD STUDENT</button>
        </div>
        {{form_end(form)}}    
</div>
{% endblock %}