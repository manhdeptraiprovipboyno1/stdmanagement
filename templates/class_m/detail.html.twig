{% extends 'base1.html.twig' %}

{% block body %}
	<div class="container col-md-6 mt-3" style="font-family:Comic Sans MS">
		<h3 class="text-success text-center text-capitalize">CLASS DETAIL</h3>
		<a class="btn btn-outline-success mt-2" href="{{ path('classM_index') }}">Classes List</a>
		<table class="table table-striped text-center mt-2">
			<thead>
				<tr>
					<th>ID</th>
					<th>Name</th>
					<th>Floor</th>
					<th>Menu</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>{{ class.id }}</td>
					<td>{{ class.name}}</td>
					<td>{{ class.floor }}</td>
					<td>
						{% if is_granted('ROLE_STAFF')%}
						<a class="btn btn-outline-dark" href="{{ path('classM_edit', {'id': class.id}) }}">EDIT</a>
						{% endif %}
						{% if is_granted('ROLE_ADMIN')%}
						<a class="btn btn-outline-dark" href="{{ path('classM_delete', {'id': class.id}) }}"
                  onclick= "return confirm('Are you sure to delete this student ?')"
                  >DELETE</a>
				  		{% endif %}
					</td>
				</tr>
			</tbody>
		</table>
	</div>
{% endblock %}
