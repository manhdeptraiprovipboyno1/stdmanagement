{% extends 'base1.html.twig' %}

{% block body %}
	<div class="container col-md-6 mt-3">
		<h3 class="text-success text-center text-capitalize">CLASS DETAIL</h3>
		<a class="btn btn-outline-success mt-2" href="{{ path('classM_index') }}">Classes List</a>
		<table class="table table-striped text-center mt-2">
			<thead>
				<tr>
					<th>ID</th>
					<th>Name</th>
					<th>Floor</th>
					<th>Menu</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>{{ class.id }}</td>
					<td>{{ class.name}}</td>
					<td>{{ class.floor }}</td>
					<td>
						<a class="btn btn-info" href="{{ path('classM_edit', {'id': class.id}) }}">EDIT</a>
						<a class="btn btn-warning" href="{{ path('classM_delete', {'id': class.id}) }}"
                  onclick= "return confirm('Are you sure to delete this student ?')"
                  >DELETE</a>
					</td>
				</tr>
			</tbody>
		</table>
	</div>
{% endblock %}
