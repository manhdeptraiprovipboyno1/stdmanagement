<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Student Management{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <!-- CSS only -->
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        {% endblock %}

        {% block javascripts %}
            <!-- JavaScript Bundle with Popper -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body  class="p-5 text-center bg-image"
          style="
          {# background-image: url('https://mdbootstrap.com/img/new/slides/041.jpg'); #}
          height: 100%;
          margin-top: 58px;
          background-repeat: no-repeat;
          background-size: cover;
          {# background-color: #0dcaf0;"> #}
        {% block header %}
        <div class ="container mt-3 text-center col-md-5" style="font-family:Comic Sans MS">
            {% for message in app.flashes('Success') %}
                <p class ="text-warning">{{ message }} </p>
            {% endfor %}
            {% for message in app.flashes('Error') %}
                <p class ="text-warning text-danger">{{ message }} </p>
            {% endfor %}
        </div>
        <div class="container mt-4" style="background-color: #0dcaf0;">
            <ul class="nav justify-content-center ">
                <li class="nav-item active">
                    <h4><a class="nav-link" style="color:#808080;font-family:Comic Sans MS" href="{{ path('lecturer_index')}}">Lecturer</a></h4>
                </li>
                <li class="nav-item active">
                    <h4><a class="nav-link" style="color:#808080;font-family:Comic Sans MS" href="{{ path('student_index')}}">Student</a></h4>
                </li>
               <li class="nav-item active">
                    <h4><a class="nav-link" style="color:#808080;font-family:Comic Sans MS" href="{{ path('classM_index')}}">Class</a></h4>
                </li>
                <li class="nav-item active">
                    <h4><a class="nav-link" style="color:#808080;font-family:Comic Sans MS" href="{{ path('subject_index')}}">Subject</a></h4>
                </li>
                <li class="nav-item active">
                    <h4><a class="nav-link" style="color:#808080;font-family:Comic Sans MS" href="{{ path('app_logout')}}">Logout</a></h4>
                </li>
            </ul>
        </div>
        {% endblock %}
        {% block body %}{% endblock %}
        {% block footer %}
            <!-- Grid container -->
            <div class="container p-4 pb-0">
                <!-- Section: Social media -->
                <section class="mb-4">
                <!-- Facebook -->
                <a
                    class="btn btn-primary btn-floating m-1"
                    style="background-color: #3b5998;"
                    href="#!"
                    role="button"
                    ><i class="fab fa-facebook-f"></i
                ></a>

                <!-- Twitter -->
                <a
                    class="btn btn-primary btn-floating m-1"
                    style="background-color: #55acee;"
                    href="#!"
                    role="button"
                    ><i class="fab fa-twitter"></i
                ></a>

                <!-- Google -->
                <a
                    class="btn btn-primary btn-floating m-1"
                    style="background-color: #dd4b39;"
                    href="#!"
                    role="button"
                    ><i class="fab fa-google"></i
                ></a>

                <!-- Instagram -->
                <a
                    class="btn btn-primary btn-floating m-1"
                    style="background-color: #ac2bac;"
                    href="# !"
                    role="button"
                    ><i class="fab fa-instagram"></i
                ></a>

                <!-- Linkedin -->
                <a
                    class="btn btn-primary btn-floating m-1"
                    style="background-color: #0082ca;"
                    href="#!"
                    role="button"
                    ><i class="fab fa-linkedin-in"></i
                ></a>
                <!-- Github -->
                <a
                    class="btn btn-primary btn-floating m-1"
                    style="background-color: #333333;"
                    href="#!"
                    role="button"
                    ><i class="fab fa-github"></i
                ></a>
                </section>
                <!-- Section: Social media -->
            </div>
            <!-- Grid container -->

            <!-- Copyright -->
            <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
                Â© 2021 Copyright:
                <a class="text-white" href="https://greenwich.edu.vn/">Greewich Viet Nam University</a>
            </div>
            <!-- Copyright -->
        {% endblock %}
    </body>
</html>
