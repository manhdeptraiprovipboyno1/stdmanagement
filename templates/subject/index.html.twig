{% extends 'base.html.twig' %}

{% block body %}
<div class="container col-md-6 mt-3">
    <h3 class="text-success text-center text-capitalize">ADD</h3>
    {% if is_granted('ROLE_ADMIN')%}
    <a class="btn btn-outline-success mt-2" href="{{ path('subject_add') }}">ADD SUBJECT</a>
    {% endif %}
        <table class="table table-striped table-responsive-md btn-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                {% if is_granted('ROLE_ADMIN')%}
                <th>Menu</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for subject in subjects %}
            <tr>
                <td>{{ subject.id }}</td>
                <td>{{ subject.name }}</td>
                <td>
                    {% if is_granted('ROLE_STAFF')%}
                    <a class="btn btn-outline-dark" href="{{ path('subject_edit', {'id': subject.id}) }}">EDIT</a>
                    {% endif %}
                    {% if is_granted('ROLE_ADMIN')%}
                    <a class="btn btn-outline-dark" href="{{ path('subject_add', {'id': subject.id}) }}">ADD</a>
                    <a class="btn btn-outline-dark" href="{{ path('subject_delete', {'id': subject.id}) }}"
                    onclick="return confirm('Are you sure ????')">DELETE</a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %} 
        </tbody>
    </table>
</div>
{% endblock %}
