{% extends 'base.html.twig' %}

{% block body %}
<div class="container col-md-6 mt-3">
    <h3 class="text-success text-center text-capitalize">ADD</h3>
    <a class="btn btn-outline-success mt-2" href="{{ path('subject_add') }}">ADD SUBJECT</a>
        <table class="table table-striped text-center mt-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Menu</th>
            </tr>
        </thead>
        <tbody>
        {% for subject in subjects %}
            <tr>
                <td>{{ subject.id }}</td>
                <td>{{ subject.name }}</td>
                <td>

                    <a class="btn btn-info" href="{{ path('subject_edit', {'id': subject.id}) }}">EDIT</a>
                    <a class="btn btn-warning" href="{{ path('subject_add', {'id': subject.id}) }}">ADD</a>
                </td>
            </tr>
        {% endfor %} 
        </tbody>
    </table>
</div>
{% endblock %}
